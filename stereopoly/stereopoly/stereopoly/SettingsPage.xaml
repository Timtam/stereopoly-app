<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="stereopoly.SettingsPage"
             xmlns:i18n="clr-namespace:stereopoly;assembly=stereopoly">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="20, 40, 20, 20" />
            <On Platform="Android, UWP" Value="20" />
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout>
      <Button x:Name="ChangeBoardLanguageButton" Clicked="OnChangeBoardLanguage" />
      <Button x:Name="ClearCacheButton" Text="{i18n:Translate ClearCacheButton}" Clicked="OnClearCache" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="stereopoly.GameBoardPage">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness">
      <On Platform="iOS" Value="20, 40, 20, 20" />
      <On Platform="Android, UWP" Value="20" />
    </OnPlatform>
  </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout>
      <Button x:Name="WatchNewsButton" Text="Watch News" Clicked="OnWatchNews" />
      <Button x:Name="DrawChanceCardButton" Text="Draw Chance Card" Clicked="OnDrawChanceCard" />
      <Button x:Name="DrawCommunityChestCardButton" Text="Draw Community Chest Card" Clicked="OnDrawCommunityChestCard" />
      <Button x:Name="SettingsButton" Text="Settings" Clicked="OnSettings" />
      <Button x:Name="EndGameButton" Text="End Game" Clicked="OnEndGame" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>